<h2>Projects</h2>

{{#each projects}}
	<div class="wide small">
		<h3>{{name}}</h3>
		{{#each description}}
			<p>{{this}}</p>
		{{/each}}

		<a class="btn btn-sm btn-social-icon btn-github" target="_blank" rel="noopener" href="{{code}}">
			<span class="fa fa-github"></span>
		</a>
		
		<a class="btn btn-sm btn-social-icon btn-linkedin" target="_blank" rel="noopener" href="{{website}}">
			<i class="fa fa-link"></i>
		</a>
	</div>
{{/each}}